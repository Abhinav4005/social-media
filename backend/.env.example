# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/socialhub_db

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a strong random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Used for CORS and email reset links
FRONTEND_URL=http://localhost:5173

# ============================================
# EMAIL CONFIGURATION (Gmail Example)
# ============================================
# For Gmail, you need to create an "App Password"
# Go to: Google Account > Security > 2-Step Verification > App passwords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
FROM_EMAIL="Social Hub <noreply@socialhub.com>"

# ============================================
# REDIS (Upstash)
# ============================================
# Get free Redis instance at: https://upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# ============================================
# IMAGEKIT (Image CDN)
# ============================================
# Get free account at: https://imagekit.io/
IMAGEKIT_PUBLIC_KEY=public_your_public_key
IMAGEKIT_PRIVATE_KEY=private_your_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# ============================================
# NODE ENVIRONMENT
# ============================================
# Options: development, production, test
NODE_ENV=development
